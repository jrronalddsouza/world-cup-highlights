{
  "name": "@layer0/devtools",
  "version": "4.19.5",
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "polka": "^0.5.2",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-svelte-svg": "^0.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.52",
    "svelte-popover": "^2.0.8",
    "svelte-preprocess": "^4.3.2",
    "svelte-preprocess-cssmodules": "^1.3.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "@layer0/prefetch": "^4.0.0"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "lodash": "^4.17.20",
    "sirv-cli": "^1.0.0"
  },
  "scripts": {
    "build:dev": "rm -rf ./dist; mkdir ./dist; rollup -c; cp -r public/widget package.json README.md src/*.js src/*.d.ts ./dist; npm run build:install-script",
    "build": "NODE_ENV=production npm run build:dev",
    "build:install-script": "rollup ./src/widget/install.js --file dist/widget/install.js -p commonjs -p terser --format iife",
    "dev": "rollup -c -w",
    "start": "node dev-server.js",
    "watch": "npm-watch",
    "push-build": "npm run build:dev && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next",
    "test": "jest --watchAll=false --forceExit"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "rollup.config.js"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "publishConfig": {
    "directory": "dist"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{ts,js}"
    ]
  }
}
